def build( bld ):
	bld.program(
		source = 'cat-bgen.cpp',
		target = 'cat-bgen',
		use = 'bgen appcontext zlib zstd boost bgen_revision_autogenerated dl rt pthread',
		cxxflags = ['-std=c++11']
	)
	bld.program(
		source = 'bgenix.cpp',
		target = 'bgenix',
		use = 'bgen appcontext db zlib zstd boost bgen_revision_autogenerated dl rt pthread',
		cxxflags = ['-std=c++11']
	)
	bld.program(
		source = 'edit-bgen.cpp',
		target = 'edit-bgen',
		use = 'bgen appcontext db zlib zstd boost bgen_revision_autogenerated dl rt pthread',
		cxxflags = ['-std=c++11']
	)
